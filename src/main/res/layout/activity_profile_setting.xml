<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileSetting"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_setting_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ic_emptyprofile"/>
    <Button
        android:id="@+id/profile_setting_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose profile pic"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/profile_setting_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="Your bio here"
        android:nextFocusDown="@id/profile_setting_name"/>
    <EditText
        android:id="@+id/profile_setting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="name"
        android:nextFocusDown="@id/profile_setting_branch"/>
    <EditText
        android:id="@+id/profile_setting_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="branch"
        android:nextFocusDown="@id/profile_Setting_year"/>
    <EditText
        android:id="@+id/profile_Setting_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="year"/>
    <ProgressBar
        android:id="@+id/profile_setting_progressbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <Button
        android:id="@+id/profile_setting_applybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APPLY CHANGES"
        android:textSize="30dp"
        android:layout_marginLeft="80dp"/>
    <Button
    android:id="@+id/fragment_profile_logoutbtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Log out"
    android:textSize="30dp"/>

</LinearLayout>
</ScrollView>